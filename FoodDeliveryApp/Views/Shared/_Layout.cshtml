<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodDeliveryApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/glow-menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodDeliveryApp.styles.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Glow Menu Navigation -->
    <div class="glow-menu-container">
        <nav class="glow-menu">
            <ul class="glow-menu-list">
                <li class="glow-menu-item">
                    <a class="glow-menu-link" data-color="blue" href="@Url.Action("Index", "Home")">
                        <div class="glow-menu-content">
                            <i class="fas fa-home glow-menu-icon"></i>
                            <span>Home</span>
                        </div>
                        <div class="glow-menu-back">
                            <i class="fas fa-home glow-menu-icon"></i>
                            <span>Home</span>
                        </div>
                    </a>
                </li>
                <li class="glow-menu-item">
                    <a class="glow-menu-link" data-color="green" href="@Url.Action("Login", "AdminAccount")">
                        <div class="glow-menu-content">
                            <i class="fas fa-user-shield glow-menu-icon"></i>
                            <span>Admin</span>
                        </div>
                        <div class="glow-menu-back">
                            <i class="fas fa-user-shield glow-menu-icon"></i>
                            <span>Admin</span>
                        </div>
                    </a>
                </li>
                <li class="glow-menu-item">
                    <a class="glow-menu-link" data-color="red" href="@Url.Action("Login", "CustomerAccount")">
                        <div class="glow-menu-content">
                            <i class="fas fa-user glow-menu-icon"></i>
                            <span>Customer</span>
                        </div>
                        <div class="glow-menu-back">
                            <i class="fas fa-user glow-menu-icon"></i>
                            <span>Customer</span>
                        </div>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Page Body -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/glow-menu.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>