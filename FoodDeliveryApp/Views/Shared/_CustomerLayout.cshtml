@*
    _customerlayout.cshtml
    Updated with Glow Menu Navbar for Customer side
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customer - @ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Glow Menu CSS -->
    <link rel="stylesheet" href="~/css/glow-menu.css" asp-append-version="true" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Glow Menu Navigation -->
    <div class="glow-menu-container">
        <nav class="glow-menu">
            <ul class="glow-menu-list">

                <!-- Home -->
                <li class="glow-menu-item">
                    <a class="glow-menu-link" data-color="blue" href="@Url.Action("Index", "Home")">
                        <div class="glow-menu-content">
                            <i class="fas fa-home glow-menu-icon"></i>
                            <span>Home</span>
                        </div>
                        <div class="glow-menu-back">
                            <i class="fas fa-home glow-menu-icon"></i>
                            <span>Home</span>
                        </div>
                    </a>
                </li>

                @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Customer"))
                {
                    <!-- Place Order -->
                    <li class="glow-menu-item">
                        <a class="glow-menu-link" data-color="green" href="@Url.Action("PlaceOrder", "Customer")">
                            <div class="glow-menu-content">
                                <i class="fas fa-utensils glow-menu-icon"></i>
                                <span>Place Order</span>
                            </div>
                            <div class="glow-menu-back">
                                <i class="fas fa-utensils glow-menu-icon"></i>
                                <span>Place Order</span>
                            </div>
                        </a>
                    </li>

                    <!-- My Orders -->
                    <li class="glow-menu-item">
                        <a class="glow-menu-link" data-color="orange" href="@Url.Action("MyOrders", "Customer")">
                            <div class="glow-menu-content">
                                <i class="fas fa-receipt glow-menu-icon"></i>
                                <span>My Orders</span>
                            </div>
                            <div class="glow-menu-back">
                                <i class="fas fa-receipt glow-menu-icon"></i>
                                <span>My Orders</span>
                            </div>
                        </a>
                    </li>

                    <!-- Logout -->
                    <li class="glow-menu-item">
                        <a class="glow-menu-link" data-color="red" href="@Url.Action("Logout", "CustomerAccount")">
                            <div class="glow-menu-content">
                                <i class="fas fa-sign-out-alt glow-menu-icon"></i>
                                <span>Logout</span>
                            </div>
                            <div class="glow-menu-back">
                                <i class="fas fa-sign-out-alt glow-menu-icon"></i>
                                <span>Logout</span>
                            </div>
                        </a>
                    </li>
                }
                else
                {
                    <!-- Login -->
                    <li class="glow-menu-item">
                        <a class="glow-menu-link" data-color="green" href="@Url.Action("Login", "CustomerAccount")">
                            <div class="glow-menu-content">
                                <i class="fas fa-sign-in-alt glow-menu-icon"></i>
                                <span>Login</span>
                            </div>
                            <div class="glow-menu-back">
                                <i class="fas fa-sign-in-alt glow-menu-icon"></i>
                                <span>Login</span>
                            </div>
                        </a>
                    </li>

                    <!-- Register -->
                    <li class="glow-menu-item">
                        <a class="glow-menu-link" data-color="orange" href="@Url.Action("Register", "CustomerAccount")">
                            <div class="glow-menu-content">
                                <i class="fas fa-user-plus glow-menu-icon"></i>
                                <span>Register</span>
                            </div>
                            <div class="glow-menu-back">
                                <i class="fas fa-user-plus glow-menu-icon"></i>
                                <span>Register</span>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>

    <!-- Page Body -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/glow-menu.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
